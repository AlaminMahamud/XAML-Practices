<Window x:Class="XAMLBasics2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XAMLBasics2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Margin="0,10,0,-10">
            <TextBox x:Name="textBox" Height="23" TextWrapping="Wrap" Text="Welcome to the XAML Tutorial" Margin="0,0,10,0" TextAlignment="Center" BorderThickness="0"/>
            <Button x:Name="button" Content="Ok" Margin="215,0,237,0" Click="button_Click"/>
        </StackPanel>
    </Grid>
</Window>
